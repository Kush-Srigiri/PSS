<Window x:Class="PSS.MVVM.View.ArtikelDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Artikel Details" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock x:Name="NameText" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock x:Name="DescriptionText" TextWrapping="Wrap" Margin="0,0,0,10"/>
            <TextBlock x:Name="UnitText" Margin="0,0,0,10"/>
            <TextBlock x:Name="QuantityText"/>
        </StackPanel>
    </Grid>
</Window>