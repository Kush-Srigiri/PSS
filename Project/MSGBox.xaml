<Window x:Class="Project.MSGBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="MSGBox" Height="150" Width="400"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Border Background="#FEFBF3" CornerRadius="20" BorderThickness="1" BorderBrush="Black" MouseDown="Border_MouseDown">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,-3,0,0"
                            Orientation="Horizontal"
                            MouseEnter="Border_MouseEnter"
                            MouseLeave="Border_MouseLeave" AutomationProperties.IsOffscreenBehavior="Onscreen">
                    <Border x:Name="CloseButton"
                            Background="#EF9587"
                            CornerRadius="1000"
                            Width="12"
                            Height="12"
                            Cursor="Hand"
                            MouseLeftButtonDown="Close_Click">
                        <Image Margin="2" Visibility="Hidden" x:Name="IconX" Source="/x.png" />
                    </Border>

                </StackPanel>
            </StackPanel>
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="70" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180" />
                    <ColumnDefinition Width="18" />
                    <ColumnDefinition Width="180" />
                </Grid.ColumnDefinitions>

                <!-- Centered TextBlock spanning all columns -->
                <TextBlock Margin="4,8" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text="Your Text Here" FontFamily="{StaticResource Roboto}" />

                <!-- Buttons -->
                <Button Grid.Row="2" Style="{StaticResource ButtonTheme}" Width="180" Height="30" Grid.Column="0" Content="{Binding SecondarybuttonName, UpdateSourceTrigger=PropertyChanged}"  />
                <Button Grid.Row="2" Style="{StaticResource ButtonTheme}" Width="180" Height="30" Grid.Column="2" Content="{Binding PrimarybuttonName, UpdateSourceTrigger=PropertyChanged}"  />
            </Grid>

        </StackPanel>
    </Border>
</Window>