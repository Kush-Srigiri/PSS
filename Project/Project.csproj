    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    <ApplicationIcon>assets\airplay.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="loader-circle-dark.png" />
    <None Remove="loader-circle.png" />
    <None Remove="log-out.png" />
    <None Remove="minus.png" />
    <None Remove="x.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="assets\airplay.ico" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="loader-circle-dark.png" />
    <Resource Include="loader-circle.png" />
    <Resource Include="log-out.png" />
